<div class="container margen">
    <div class="col">
        <a href="/links" class="btn btn-lg btn-primary fas fa-reply">Regresar</a>
    </div>
    <h1 class="centar">Atender Paciente</h1>
    <div class="row">
        <div class="col mx-auto">
            <div class="card-body">
                <form action="/links/atenderPaciente" method="POST">
                    <div>
                        <div class="row">
                            <div class="col">
                                <label>Seleccione la enfermedad</label>
                                <select class="form-control" name="nombre_enfermedad" required>
                                    <label>Tipo de Medicina</label>
                                        <option value="">Seleccione una opción</option>
                                    {{#each enfermedades}}
                                        <option >{{codigo_enfermedad}}  {{nombre_enfermedad}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label>Comentarios del Médico</label>
                                    <textarea type="text" class="form-control" name="comentario_medico" placeholder="Ingrese su comentario con respecto al estado del paciente"  required></textarea>
                                </div>
                            </div>
                        </div>  
                        <hr>
                        <div class="col margenBotones">
                            <div class="form-group">
                                <button class="btn btn-primary">Enviar</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script>
function buscarUsuario() {
  var x = document.getElementById("codigoUsuario");
  var valor = document.getElementById("codigoUsuario").value;
  window.location= `/links/buscarUsuarioPaciente/${valor}`;
}
</script>